@model Forum.Web.Models.UserListViewModel

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

Number of users: @Model.Users.Count

<table border="1">
    <tr>
        <th style="text-align:center">ID</th>
        <th style="text-align:center">E-mail</th>
        <th style="text-align:center">NickName</th>
        <th style="text-align:center">Description</th>
    </tr>
    @for (var i = 0; i < Model.Users.Count; i++)
    {
        
    <tr>
        <td>@Model.Users[i].ID</td>
        <td>@Model.Users[i].Email</td>
        <td>@Model.Users[i].Nickname</td>
        <td>@Model.Users[i].Description</td>
    </tr>
    }
</table>